<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_detail_cast_photo"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,4:6"
        android:src="@drawable/img_back_portrait_default"
        android:scaleType="centerCrop"
        app:riv_corner_radius="16dp"/>

    <TextView
        android:id="@+id/item_detail_cast_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_detail_cast_photo"
        app:layout_constraintStart_toStartOf="@id/item_detail_cast_photo"
        app:layout_constraintEnd_toEndOf="@id/item_detail_cast_photo"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/colorSecondaryOnSurfacePrimary"
        android:textSize="13sp"
        android:lines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        tools:text="Diego Dora"/>

    <TextView
        android:id="@+id/item_detail_cast_character"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_detail_cast_name"
        app:layout_constraintStart_toStartOf="@id/item_detail_cast_photo"
        app:layout_constraintEnd_toEndOf="@id/item_detail_cast_photo"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/lato_regular"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        android:textAlignment="center"
        tools:text="Sweeper"
        android:textColor="@color/colorTertiaryOnSurfacePrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>